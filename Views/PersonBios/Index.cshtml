@model IEnumerable<ContactBook.Models.PersonBio>

@{
    ViewData["Title"] = "Index";
}

<h1>Person's Bio</h1>

<table class="table">
    <thead>
        <tr><a class="btn btn-primary" asp-action="Create">Create New</a></tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hobbies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bloodgroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hobbies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bloodgroup)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.PBID">Edit</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.PBID">View</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PBID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
