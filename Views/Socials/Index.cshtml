@model IEnumerable<ContactBook.Models.Social>

@{
    ViewData["Title"] = "Index";
}

<h1>Person's Social Accounts</h1>


<table class="table">
    <thead>
        <tr><a class="btn btn-primary" asp-action="Create">Create New</a></tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstagramId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacebookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhatsappNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstagramId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacebookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhatsappNumber)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.SId">Edit</a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.SId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
